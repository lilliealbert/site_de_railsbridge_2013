.feature.feature-no-icon.event
  %h4= event.title
  %ul
    %li
      .event-date #{event_dates(event.sessions.first.starts_at, event.sessions.last.ends_at)}
      - if event.location
        .event-location #{event.location.city}, #{event.location.state}
      - else
        .event-location Location TBD
    %li
      %span.icon-user
      = "Organized by #{event.organizers.first} & friends"
    - if event.location && valid_location?(event.location)
      %li
        = link_to location_url(event.location), class: 'event-venue', target: '_blank' do
          %span.icon-map-marker
          = "Held at #{location_name(event.location)}"

  .event-cta
    = link_to 'RSVP on Bridge Troll', bridgetroll_event_url(event.id), target: '_blank'
